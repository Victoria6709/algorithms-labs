Алгоритм Прима:
#include <iostream>
#include <cstring>
using namespace std;

#define INF 9999999
#define V 8 // кількість вершин

// Матриця суміжності для графа
int G[V][V] = {
    {INF, 2, 5, 1, INF, INF, 1, INF},
    {2, INF, INF, INF, 8, INF, INF, INF},
    {5, INF, INF, INF, 2, 4, 4, 4},
    {1, INF, INF, INF, 9, INF, INF, 4},
    {INF, 8, 2, 9, INF, 3, INF, INF},
    {INF, INF, 4, INF, 3, INF, INF, 1},
    {1, INF, 4, INF, INF, INF, INF, 6},
    {INF, INF, 4, 4, INF, 1, 6, INF}
};

int main() {
    int no_edge = 0; // кількість ребер у MST
    int selected[V];
    memset(selected, false, sizeof(selected));

    selected[0] = true; // починаємо з вершини 1
    int x, y;
    int total_weight = 0;

    cout << "Edge : Weight" << endl;

    while (no_edge < V - 1) {
        int min = INF;
        x = 0;
        y = 0;

        for (int i = 0; i < V; i++) {
            if (selected[i]) {
                for (int j = 0; j < V; j++) {
                    if (!selected[j] && G[i][j] < min) {
                        min = G[i][j];
                        x = i;
                        y = j;
                    }
                }
            }
        }

        cout << x + 1 << " - " << y + 1 << " : " << G[x][y] << endl;
        total_weight += G[x][y];
        selected[y] = true;
        no_edge++;
    }

    cout << "Total weight of MST: " << total_weight << endl;
    return 0;
}

Алгоритм Крускала:
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

#define edge pair<int,int>

class Graph {
private:
    vector<pair<int, edge>> G; // всі ребра графа
    vector<pair<int, edge>> T; // MST
    int *parent;
    int V; // кількість вершин
public:
    Graph(int V);
    void AddWeightedEdge(int u, int v, int w);
    int find_set(int i);
    void union_set(int u, int v);
    void kruskal();
    void print();
};

Graph::Graph(int V) {
    this->V = V;
    parent = new int[V];
    for (int i = 0; i < V; i++)
        parent[i] = i;
    G.clear();
    T.clear();
}

void Graph::AddWeightedEdge(int u, int v, int w) {
    G.push_back(make_pair(w, edge(u, v)));
}

int Graph::find_set(int i) {
    if (i == parent[i])
        return i;
    return parent[i] = find_set(parent[i]);
}

void Graph::union_set(int u, int v) {
    parent[find_set(u)] = find_set(v);
}

void Graph::kruskal() {
    sort(G.begin(), G.end()); // сортування ребер за вагою
    for (int i = 0; i < G.size(); i++) {
        int uRep = find_set(G[i].second.first);
        int vRep = find_set(G[i].second.second);
        if (uRep != vRep) {
            T.push_back(G[i]); // додаємо ребро до MST
            union_set(uRep, vRep);
        }
    }
}

void Graph::print() {
    cout << "Edge : Weight" << endl;
    int total_weight = 0;
    for (int i = 0; i < T.size(); i++) {
        cout << T[i].second.first + 1 << " - " << T[i].second.second + 1
             << " : " << T[i].first << endl;
        total_weight += T[i].first;
    }
    cout << "Total weight of MST: " << total_weight << endl;
}

int main() {
    Graph g(8);
    // Додаємо ребра графа
    g.AddWeightedEdge(0, 1, 2);
    g.AddWeightedEdge(0, 3, 1);
    g.AddWeightedEdge(0, 6, 1);
    g.AddWeightedEdge(0, 2, 5);
    g.AddWeightedEdge(1, 4, 8);
    g.AddWeightedEdge(2, 4, 2);
    g.AddWeightedEdge(2, 5, 4);
    g.AddWeightedEdge(2, 6, 4);
    g.AddWeightedEdge(2, 7, 4);
    g.AddWeightedEdge(3, 4, 9);
    g.AddWeightedEdge(3, 7, 4);
    g.AddWeightedEdge(4, 5, 3);
    g.AddWeightedEdge(5, 7, 1);
    g.AddWeightedEdge(6, 7, 6);

    g.kruskal();
    g.print();
    return 0;
}
